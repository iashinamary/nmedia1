<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_post_layout"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="new_content,save, edit_icon"
        />

    <ImageView
        android:id="@+id/edit_icon"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toTopOf="@id/new_content"
        />

    <TextView
        android:id="@+id/edit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Message"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/toolsTop"
        app:layout_constraintBottom_toTopOf="@id/preview"
        app:layout_constraintStart_toEndOf="@id/edit_icon"
        />

    <TextView
        android:id="@+id/preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Сообщение"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/new_content"
        app:layout_constraintStart_toEndOf="@id/edit_icon"
        app:layout_constraintTop_toBottomOf="@id/edit_label"
        app:layout_constraintEnd_toStartOf="@id/cancel_edit"
        />


    <EditText
        android:id="@+id/new_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Введите текст"
        android:inputType="textMultiLine"
        android:padding="@dimen/common_spacing"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/save"
        android:background="@color/white"
        />

    <ImageButton
        android:id="@+id/cancel_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolsTop"
        app:srcCompat="@drawable/ic_baseline_close_24"
        android:background="?attr/selectableItemBackground"
        />
    
    <androidx.constraintlayout.widget.Group
        android:id="@+id/edit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="edit_icon, edit_label, preview, cancel_edit"
        />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/new_content"
        app:srcCompat="@drawable/ic_baseline_save"
        />


</androidx.constraintlayout.widget.ConstraintLayout>